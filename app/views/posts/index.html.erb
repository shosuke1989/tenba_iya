<div class="main posts-index">




  <div class="container">
    <h1 class="form-heading">商品検索</h1>
    <%= form_tag("/posts/index") do %>
      <div class="form">
        <div class="form-body">
          <input name="content">
          <input type="submit" value="検索">
        </div>
      </div>
    <% end %>
  </div>

  <div class="container">
    <h1 class="form-heading">商品名</h1>
    <p>(販売数)</p>
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <%= link_to(post.content,"/posts/#{post.id}") %>
        <p>(<%= post.tickets_count %>)</p>
      </div>
    <% end %>
    </div>

    <div class="container">
    <h1 class="form-heading">最近追加された商品</h1>
    <% @posts_new.each do |post| %>
      <div class="posts-index-item">
        <%= link_to(post.content,"/posts/#{post.id}") %>
      </div>
    <% end %>
    </div>
    

   
</div>