<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">商品登録</h1>
    <%= form_tag("/posts/create") do %>
      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>  
          <input name="content">
          <input type="submit" value="登録">
        </div>
      </div>
    <% end %>
  </div>
</div>